{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "http://localhost:8000/api/$1" },
    { "source": "/auth/(.*)", "destination": "http://localhost:8000/auth/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
