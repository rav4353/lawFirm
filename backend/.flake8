[flake8]
max-line-length = 120
exclude = venv, __pycache__, .git
ignore =
    # Whitespace and blank line issues
    W291, W293, E301, E302, E305, E203, E261, E265, E241
    # Unused imports
    F401
    # Line too long
    E501
    # Comparison to True
    E712
    # Module level import not at top of file
    E402
    # f-string missing placeholders
    F541
    # Bare except
    E722
